<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>ForgePlugin</artifactId>
    <groupId>com.earth2me.minecraft.forgeplugin</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.earth2me.minecraft.forgeplugin</groupId>
  <artifactId>ForgePluginRailcraft</artifactId>
  <name>ForgePluginRailcraft</name>
  <build>
    <sourceDirectory>${project.basedir}/src/main/java</sourceDirectory>
    <testSourceDirectory>${project.basedir}/src/test/java</testSourceDirectory>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${project.basedir}/src/main/resources</directory>
        <excludes>
          <exclude>.*</exclude>
        </excludes>
      </resource>
    </resources>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.0</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <compilerArguments>
            <Xlint />
          </compilerArguments>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>false</minimizeJar>
              <shadedArtifactAttached>false</shadedArtifactAttached>
              <artifactSet>
                <includes>
                  <include>Tekkit:Railcraft</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>Tekkit:Railcraft</artifact>
                  <excludes>
                    <exclude>railcraft/common/carts/ContainerTankCart.class</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>net.milkbowl</groupId>
      <artifactId>Vault</artifactId>
      <version>1.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>0.11.6</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>technic-pack</groupId>
      <artifactId>tekkit</artifactId>
      <version>1.2.5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>Tekkit</groupId>
      <artifactId>EE2Server</artifactId>
      <version>1.4.6.5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>Tekkit</groupId>
      <artifactId>buildcraft</artifactId>
      <version>2.2.14</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>Tekkit</groupId>
      <artifactId>Redpower</artifactId>
      <version>2.0p5b2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>Tekkit</groupId>
      <artifactId>tubestuff</artifactId>
      <version>49.1.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>Tekkit</groupId>
      <artifactId>immibis-core</artifactId>
      <version>49.1.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>

